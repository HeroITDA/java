package koding;
import java.util.Scanner;
public class WarungMakan {
	public static void main(String[] args) {
		int pilih,jumlah,total;
		Scanner input=new Scanner(System.in);
		do {
		System.out.println("Warung Makan");
		System.out.println("Rindu Nasi");
		System.out.println("---------------");
		System.out.println("1. Nasi Goreng");
		System.out.println("2. Nasi Uduk");
		System.out.println("3. Nasi Kuning");
		System.out.println("4. Nasi Kucing");
		System.out.println("5. Nasi Orak-arik");
		System.out.println("6. Nasi Magelangan");
		System.out.println("7. Keluar");
		System.out.println("----------------");
		System.out.print("Pilih [1-7] :");
		pilih=input.nextInt();
		}
		while(pilih!=7);
		
		switch(pilih) {
		case 1:
			System.out.println("Nasi Goreng, beli berapa porsi =");
			jumlah=input.nextInt();
			total=jumlah*10000;
			System.out.println("Nasi GOreng yang anda pesan seharga = Rp."+total);
		case 2:
			System.out.println("Nasi Uduk, beli berapa porsi =");
			jumlah=input.nextInt();
			total=jumlah*8000;
			System.out.println("Nasi Uduk yang anda pesan seharga = Rp."+total);
		case 3:
			System.out.println("Nasi Kuning, beli berapa porsi =");
			jumlah=input.nextInt();
			total=jumlah*9500;
			System.out.println("Nasi Kuning yang anda pesan seharga = Rp."+total);
		case 4:
			System.out.println("Nasi Kucing, beli berapa porsi =");
			jumlah=input.nextInt();
			total=jumlah*2000;
			System.out.println("Nasi Kucing yang anda pesan seharga = Rp."+total);
		case 5:
			System.out.println("Nasi Orak-Arik, beli berapa porsi =");
			jumlah=input.nextInt();
			total=jumlah*9000;
			System.out.println("Nasi Orak-Arik yang anda pesan seharga = Rp."+total);
		case 6:
			System.out.println("Nasi Magelangan, beli berapa porsi =");
			jumlah=input.nextInt();
			total=jumlah*12000;
			System.out.println("Nasi Magelangan yang anda pesan seharga = Rp."+total);
		case 7:
			System.out.println("Tidak jadi membeli, tidak punya uang !");
			
		}
			System.out.println("Terima Kasih Telah Membeli");
			input.close();
	}

}
